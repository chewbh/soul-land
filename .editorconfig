root = true

# Unix-style newlines with a newline ending every file
[*]
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
charset = utf-8
max_line_length = 120

[*.{js,jsx,json}]
indent_size = 2
indent_style = space


[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120
insert_final_newline = true

